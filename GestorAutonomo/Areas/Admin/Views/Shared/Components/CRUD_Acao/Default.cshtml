@if (ViewBag.Crud.Operacao == Opcoes.Create || ViewBag.Crud.Operacao == Opcoes.Update)
{
    <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Salvar</button>
}

@if (ViewBag.Crud.Operacao == Opcoes.Delete)
{
    <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Excluir</button>
}

<a asp-action="Index" class="btn btn-outline-info"><i class="fas fa-step-backward"></i> Voltar</a>
