@model IPagedList<CategoriaProduto>
@{
    ViewData["Title"] = ViewBag.Crud.Titulo;
}


@*Tela com os Dados do CRUD ( Titulo, SubTitulo e Descricao )*@
@await Component.InvokeAsync("CRUD")


@*Tela de Pesquisa*@
@await Component.InvokeAsync("Pesquisar", new
    { placeholder = "Digite a Descrição da Categoria" ,
      aspaction ="Cadastrar"} )

<br />

@if (TempData["msg_s"] != null)
{
    <p class="alert alert-success">@TempData["msg_s"]</p>
}


@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr style="text-align:center">
                    <th class="col-1">@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th class="col-6">@Html.DisplayNameFor(model => model.First().Descricao)</th>
                    <th class="col-2">@Html.DisplayNameFor(model => model.First().CategoriaPaiId)</th>
                    <th class="col-3">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CategoriaProduto categoria in Model)
                {
                    <tr>
                        <th scope="row">@categoria.Id</th>
                        <td>@categoria.Descricao</td>
                        <td>
                            @Html.DisplayFor(model => categoria.CategoriaPai.Id)
                            -
                            @Html.DisplayFor(model => categoria.CategoriaPai.Descricao)
                        </td>
                        <td style="text-align:center">
                            <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-outline-info mr-2"><i class="fas fa-pencil-alt"></i> Editar</a>
                            <a asp-action="Excluir" asp-route-id="@categoria.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Excluir</a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
    <br />
    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
}
else
{

    <div class="alert alert-info">
        <strong>Nenhum Registro Cadastrado!</strong>
    </div>

}
