@model GestorAutonomo.Models.Empresa;

@{

    ViewData["Title"] = ViewBag.Crud.Titulo;
}

<h1>@ViewBag.Crud.Titulo</h1>
<h3>@ViewBag.Crud.SubTitulo</h3>
<h5>@ViewBag.Crud.Descricao</h5>



<form method="post" asp-action="Atualizar" asp-area="Admin" asp-controller="Empresa">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="CNPJ_CPF"></label>
                <input asp-for="CNPJ_CPF" class="form-control" placeholder="Informe o CPF ou CNPJ">
                <span asp-validation-for="CNPJ_CPF" class="text-danger"></span>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" placeholder="Informe a Razão Social" autofocus>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col">

            <div class="form-group">
                <label asp-for="Fantasia"></label>
                <input asp-for="Fantasia" class="form-control" placeholder="Informe o Nome Fantasia">
                <span asp-validation-for="Fantasia" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col">
            <div class="form-group">
                <label asp-for="Endereco"></label>
                <input asp-for="Endereco" class="form-control" placeholder="Informe o Endereço">
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label asp-for="Numero"></label>
                <input asp-for="Numero" class="form-control" placeholder="Informe o número">
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
        </div>

        <div class="col">

            <div class="form-group">
                <label asp-for="Bairro"></label>
                <input asp-for="Bairro" class="form-control" placeholder="Informe o Bairro">
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Complemento"></label>
        <input asp-for="Complemento" class="form-control" placeholder="Informe o Complemento do Endereço">
        <span asp-validation-for="Complemento" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col">

            <div class="form-group">
                <label asp-for="CEP"></label>
                <input asp-for="CEP" class="form-control" placeholder="Informe o CEP" onkeypress="$(this).mask('00.000-000')">
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
        </div>

        <div class="col">

            <div class="form-group">
                <label asp-for="UFId"></label>
                <select asp-for="UFId" class="form-control" asp-items="@ViewBag.UF">
                    <option value="0">Selecione</option>
                </select>
                <span asp-validation-for="UFId" class="text-danger"></span>
            </div>

        </div>

        <div class="col">

            <div class="form-group">
                <label asp-for="Cidade"></label>
                <input asp-for="Cidade" class="form-control" placeholder="Informe a Cidade">
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Seu email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <small class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
            </div>
        </div>


        <div class="col">
            <div class="form-group">
                <label asp-for="EmailComercial"></label>
                <input asp-for="EmailComercial" class="form-control" placeholder="Seu email Comercial">
                <span asp-validation-for="EmailComercial" class="text-danger"></span>
                <small class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label asp-for="EmailFinanceiro"></label>
                <input asp-for="EmailFinanceiro" class="form-control" placeholder="Seu email Financeiro">
                <span asp-validation-for="EmailFinanceiro" class="text-danger"></span>
                <small class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label asp-for="EmailGerencial"></label>
                <input asp-for="EmailGerencial" class="form-control" placeholder="Seu email Gerencial">
                <span asp-validation-for="EmailGerencial" class="text-danger"></span>
                <small class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="TelefonePrincipal"></label>
                <input asp-for="TelefonePrincipal" class="form-control" placeholder="Seu Telefone Princiapl" onkeypress="$(this).mask('(00) 0000-0000')">
                <span asp-validation-for="TelefonePrincipal" class="text-danger"></span>

            </div>
        </div>


        <div class="col">
            <div class="form-group">
                <label asp-for="TelefoneComercial"></label>
                <input asp-for="TelefoneComercial" class="form-control" placeholder="Seu Telefone Comercial" onkeypress="$(this).mask('(00) 0000-0000')">
                <span asp-validation-for="TelefoneComercial" class="text-danger"></span>

            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label asp-for="TelefoneFinanceiro"></label>
                <input asp-for="TelefoneFinanceiro" class="form-control" placeholder="Seu Telefone Financeiro" onkeypress="$(this).mask('(00) 0000-0000')">
                <span asp-validation-for="TelefoneFinanceiro" class="text-danger"></span>

            </div>
        </div>
    </div>

    <div>
        <br />

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" asp-controller="Painel" class="btn btn-info">Voltar</a>
    </div>

</form>

