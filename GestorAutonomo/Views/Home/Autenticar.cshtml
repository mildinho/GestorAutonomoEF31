@model GestorAutonomo.Domain.Entities.Login
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <br />
    <h1 class="display-4">Área de Login </h1>

</div>


<!-- The Modal -->
<div class="modal fade" id="LoginModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Login">
                <!-- Modal Header -->
                <div>
                    @*<button type="button" class="close mr-2" data-dismiss="modal">&times;</button>*@
                    <img src="~/images/img_avatar01.png" alt="Avatar" class="avatar mt-4 mx-auto d-block">
                </div>

                <div class="modal-body">
                    @if (ViewData["msg_e"] != null)
                    {
               
                        <div class="alert alert-danger alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Erro!</strong> @Html.Raw(ViewData["msg_e"])
                        </div>

                    }
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <b><label asp-for="Empresa.CNPJ_CPF"></label></b>
                        <input asp-for="Empresa.CNPJ_CPF" class="form-control" id="idEmpresaCNPJ_CPF" type="text" placeholder="Informe o CNPJ ou CPF da Empresa" required autofocus>
                        <span asp-validation-for="Empresa.CNPJ_CPF" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <b><label asp-for="EMail"></label></b>
                        <input asp-for="EMail" class="form-control" id="idemail" type="email" placeholder="Informe o E-Mail" required autofocus>
                        <span asp-validation-for="EMail" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <b><label asp-for="Password"></label></b>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Informe a Senha" required>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="d-flex row px-3">
                        <button class="btn btn-dark flex-fill" type="submit">Acessar</button>

                    </div>
                </div>

                <!-- Modal footer -->
                <div class="rodape px-3 py-2 mt-2 d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-secondary ml-1" data-dismiss="modal">Cancelar</button>
                    <span> <a href="#">Esqueceu a Senha?</a></span>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#LoginModal").modal();
            document.getElementById('idemail').focus()
    });

    </script>

}